@model PhoneWeb.Models.Employees


@{
    ViewBag.Title = "Телефоны ОГТ";
    Layout = "~/Views/_LayoutPage.cshtml";
}

<div class="container-fluid">
    
    <h2 class="text-center">Телефоны ОГТ</h2>




    <div class="col-md-2 col-sm-2 col-xs-2">

        <div class="panel panel-primary">
            <div class="panel-heading">
                <h5>Список бюро по производствам</h5>
            </div>
            <div class="panel-body">

                <ul class="list-group">
                    <li class="list-group-item my-list-group">

                        <a href="#" class="active text-uppercase">Все</a>

                        <ul class="list-group">

                            @foreach (var _div in ViewBag.Divisions)
                            {
                                <li class="list-group-item">

                                    <p><a href="#">@_div.Name</a></p>

                                    <ul class="list-group">
                                        @foreach (var bureau in _div.Bureaus)
                                        {
                                            <li class="list-group-item list-group-item-warning"><a href="#">@bureau</a></li>
                                        }
                                    </ul>
                                </li>
                            }

                        </ul>
                    </li>
                </ul>

            </div>
        </div>



    </div>

    <div class="col-md-5 col-sm-5 col-xs-5 table-responsive ">
        
        @using (Ajax.BeginForm("EmloyeeSearch", new AjaxOptions { UpdateTargetId = "results" }))
        {
            <div class="input-group">
                <input type="text" name="surname" class="form-control input-lg" placeholder="Введите фамилию" />
                @*<input type="submit" value="Поиск" class="btn btn-primary" />*@
                <div class="input-group-btn">
                    <button class="btn btn-default btn-lg" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </div>
            </div>
        }

        <div id="results">
            @*<table class="table table-striped">
            <thead>
                <tr class="text-uppercase">
                    <th>Фамилия</th>
                    <th>Имя</th>
                    <th>Отчество</th>
                    <th>Телефон</th>
                    <th>Номер комнаты</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var emp in Model)
                {
                    <tr>
                        <td><b>@emp.Surname</b></td>
                        <td>@emp.Name</td>
                        <td>@emp.Patronymic</td>
                        <td>@emp.Phone</td>
                        <td>@emp.Room</td>
                    </tr>
                }
            </tbody>
        </table>*@
        </div>
    </div>

</div>